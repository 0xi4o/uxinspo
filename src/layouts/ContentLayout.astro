---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Hero from '@/components/Hero.astro'
import { AstroSeo } from '@astrolib/seo'
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
	title='SaaS UI Inspiration'
	description='Your site description goes here'
	canonical='https://www.michaelandreuzza.com'
	openGraph={{
		url: 'https://www.michaelandreuzza.com',
		title: 'Open Graph Title',
		description: 'Open Graph Description',
		images: [
			{
				url: 'https://www.michaelandreuzza.com/opengraph/social-og.jpg',
				width: 1200,
				height: 630,
				alt: 'Social open graph',
				type: 'image/jpeg',
			},
			{
				url: 'https://www.michaelandreuzza.com/opengraph/twitter-og.jpg',
				width: 4096,
				height: 4096,
				alt: 'Twitter open graph',
				type: 'image/jpeg',
			},
			{ url: 'https://www.michaelandreuzza.com/opengraph/social-og.jpg' },
			{
				url: 'https://www.michaelandreuzza.com/opengraph/twitter-og.jpg',
			},
		],
		site_name: 'YourSitesName',
	}}
	twitter={{
		handle: '@TwitterHandle',
		site: '@site',
		cardType: 'summary_large_image',
	}}
/>
<BaseLayout>
	<Hero />
	<main class='relative overflow-hidden flex flex-grow h-auto bg-text/[1%]'>
		<div
			class='relative mx-auto px-8 max-w-[96rem] py-12 lg:py-24 lg:px-20 md:px-12'
		>
			<div
				class='flex py-12'
			>
				<slot />
			</div>
		</div>
	</main>
</BaseLayout>

---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Hero from '@/components/Hero.astro'
import { AstroSeo } from '@astrolib/seo'
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
	title='uxinspo'
	description='A curated collection of web application interfaces for inspiration and reference'
	canonical='https://uxinspo.site'
	openGraph={{
		url: 'https://uxinspo.site',
		title: 'uxinspo',
		description:
			'A curated collection of web application interfaces for inspiration and reference',
		images: [
			{
				url: '/og.png',
				width: 1200,
				height: 630,
				alt: 'Social open graph',
				type: 'image/png',
			},
		],
		site_name: 'uxinspo',
	}}
	twitter={{
		handle: '@i4o_dev',
		site: '@site',
		cardType: 'summary_large_image',
	}}
/>
<BaseLayout>
	<Hero />
	<main class='relative overflow-hidden flex flex-grow h-auto bg-text/[1%]'>
		<div
			class='relative mx-auto px-8 max-w-[96rem] py-12 lg:py-24 lg:px-20 md:px-12'
		>
			<div class='flex py-12'>
				<slot />
			</div>
		</div>
	</main>
</BaseLayout>

---
import { getCollection } from 'astro:content'
import { Image } from '@astrojs/image/components'
import GridLayout from '@/layouts/GridLayout.astro'

const designs = await getCollection('ui', ({ data }) => !data.draft)
---

<GridLayout>
	{
		designs.map((design) => (
			<figure>
				<a href={`/${design.slug}`}>
					<div class='bg-text/5 p-4 rounded-3xl' style=''>
						<div class='relative w-full lg:rounded-2xl object-cover rounded shadow-2xl'>
							<Image
								src={design.data.image}
								alt={`${design.data.product} thumbnail`}
								width={410}
								aspectRatio={4}
							/>
						</div>
					</div>
					<div class='mt-4 flex justify-between px-6'>
						<p class='mt-1 text-lg font-medium leading-6 text-text'>
							{design.data.product}
						</p>
					</div>
				</a>
			</figure>
		))
	}
</GridLayout>

---
type Props = {
	active?: boolean
}

const { active = false } = Astro.props
---

<button
	class={`flex items-center justify-center px-4 py-2 border-[3px] border-white shadow-[5px_5px_0_0_rgba(250,238,231,0.9)] rounded-md text-lg text-text transition-all duration-200 hover:translate-x-[5px] hover:translate-y-[5px] hover:shadow-none hover:bg-primary hover:text-background ${
		active ? 'shadow-none bg-primary text-background' : 'text-text'
	}`}
>
	<slot />
</button>

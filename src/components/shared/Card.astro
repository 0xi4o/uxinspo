---
// TODO: change the img element to @astrojs/image
type CardImage = {
	alt: string
	aspectRatio: number
	src: string
	width: number
}

type Props = {
	image: CardImage
	link: string
	title: string
	tag?: string
}

const { image, link, tag, title } = Astro.props
---

<a href={link}>
	<figure class='flex flex-col'>
		<div
			class='relative w-full object-cover shadow-[5px_5px_0_0_rgba(250,238,231,0.9)] border-[3px] border-white transition-all duration-200 hover:translate-x-[5px] hover:translate-y-[5px] hover:shadow-none rounded-md overflow-hidden aspect-video'
		>
			<img
				alt={image.alt}
				src={image.src}
				width={image.width}
			/>
		</div>
	</figure>
	<div class='mt-4 flex justify-between px-2'>
		<p class='mt-1 text-xl font-medium leading-6 text-text'>
			{title}
		</p>
		{
			tag ? (
				<p class='px-3 bg-text/10 text-text/50 inline-flex items-center justify-center rounded-lg text-sm'>
					{tag}
				</p>
			) : null
		}
	</div>
</a>

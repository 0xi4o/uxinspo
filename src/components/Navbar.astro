---
import { Image } from '@astrojs/image/components'
---

<header class='w-full h-24 flex items-center border-b border-text/5'>
	<div class='w-full h-full mx-auto md:px-12 px-8 max-w-7xl lg:px-16'>
		<div
			x-data='{ open: false }'
			class='relative flex flex-col w-full h-full py-5 mx-auto md:items-center md:justify-between md:flex-row'
		>
			<div
				class='flex flex-row items-center justify-between lg:justify-start'
			>
				<a
					href='/'
					class='lg:pr-8 inline-flex items-center gap-3 text-text -ml-3'
				>
					<Image
						src='/logo.png'
						alt='uxinspo logo'
						height={32}
						aspectRatio='4:1'
					/>
				</a>
				<button
					@click='open = !open'
					class='inline-flex items-center justify-center p-2 text-text hover:text-primary focus:outline-none focus:text-text lg:hidden'
				>
					<svg
						class='w-6 h-6'
						stroke='currentColor'
						fill='none'
						viewBox='0 0 24 24'
					>
						<path
							:class="{'hidden': open, 'inline-flex': !open }"
							class='inline-flex'
							stroke-linecap='round'
							stroke-linejoin='round'
							stroke-width='2'
							d='M4 6h16M4 12h16M4 18h16'></path>
						<path
							:class="{'hidden': !open, 'inline-flex': open }"
							class='hidden'
							stroke-linecap='round'
							stroke-linejoin='round'
							stroke-width='2'
							d='M6 18L18 6M6 6l12 12'></path>
					</svg>
				</button>
			</div>
			<nav
				:class="{'flex': open, 'hidden': !open}"
				class='flex-col items-center flex-grow hidden md:pb-0 md:flex md:justify-end md:flex-row'
			>
				<a
					class='px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-text hover:text-primary lg:ml-auto'
					href='/categories'>Categories</a
				>
				<a
					class='px-2 lg:px-6 py-2 md:px-3 text-sm font-medium text-text hover:text-primary'
					href='/about'>About</a
				>
			</nav>
		</div>
	</div>
</header>
